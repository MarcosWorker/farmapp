<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".flow.AdicionarClienteActivity">

    <EditText
        android:id="@+id/nome_novo_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Nome"
        android:inputType="text"/>
    <EditText
        android:id="@+id/endereco_novo_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/nome_novo_cliente"
        android:hint="EndereÃ§o"
        android:inputType="text"/>
    <EditText
        android:id="@+id/telefone_novo_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/endereco_novo_cliente"
        android:hint="Telefone"
        android:inputType="phone"/>
    <EditText
        android:id="@+id/email_novo_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/telefone_novo_cliente"
        android:hint="Email"
        android:inputType="textEmailAddress"/>
    <EditText
        android:id="@+id/cpf_novo_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_below="@id/email_novo_cliente"
        android:hint="CPF"
        android:inputType="number"/>

    <Button
        android:id="@+id/botao_salvar_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/nome_novo_cliente"
        android:layout_below="@+id/cpf_novo_cliente"
        android:layout_marginTop="-8dp"
        android:background="@drawable/round_button"
        android:text="Salvar"
        android:textColor="#fff"
        android:textSize="20dp" />

</RelativeLayout>